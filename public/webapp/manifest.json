{
  "_version": "1.1.0",
  "sap.app": {
	"_version": "1.1.0",
	"id": "ui5-todos",
	"type": "application",
	"i18n": "i18n/i18n.properties",
	"title": "{{appTitle}}",
	"description": "{{appDescription}}",
	"applicationVersion": {
	  "version": "1.0.0"
	}
  },
  "sap.ui": {
	"_version": "1.1.0",
	"technology": "UI5",
	"deviceTypes": {
	  "desktop": true,
	  "tablet": true,
	  "phone": true
	},
	"supportedThemes": [
	  "sap_belize"
	]
  },
  "sap.ui5": {
	"_version": "1.1.0",
	"rootView": "webapp.view.App",
	"dependencies": {
	  "minUI5Version": "1.30",
	  "libs": {
		"sap.m": {}
	  }
	},
    "contentDensities": {
      "compact": true,
      "cozy": true
    },
	"models": {
	  "i18n": {
		"type": "sap.ui.model.resource.ResourceModel",
		"settings": {
		  "bundleName": "webapp.i18n.i18n"
		}
	  },
	  "invoice": {
		"type": "sap.ui.model.json.JSONModel",
		"uri": "Invoices.json"
	  },
	  "employee": {
		"type": "sap.ui.model.json.JSONModel",
		"uri": "./json/Employees.json"
	  }
	},
	"resources": {
	  "css": [
		{
		  "uri": "css/style.css"
		}
	  ]
	},
	"routing": {
	  "config": {
		"routerClass": "sap.m.routing.Router",
		"viewType": "XML",
		"viewPath": "webapp.view",
		"controlId": "SplitApp",
		"controlAggregation": "pages",
        "bypassed": {
           "target": "notFound"
        }
	  },
	  "routes": [
		{
		  "pattern": "",
		  "name": "home",
		  "target": ["master", "home"]
		},
		{
		  "pattern": "todos",
		  "name": "todos",
		  "target": ["master", "todos"]
		},
		{
		  "pattern": "walkthrough",
		  "name": "walkthrough",
		  "target": ["masterWalkthrough", "overview"]
		},
		{
		  "pattern": "detail/{invoicePath}",
		  "name": "detail",
		  "target": ["masterWalkthrough", "detail"]
		}, {
		  "pattern": "employees",
		  "name": "employeeList",
		  "target": ["masterWalkthrough", "employees"]
		}, {
		  "pattern": "employees/{employeeId}",
		  "name": "employee",
		  "target": ["masterWalkthrough","employee"]
		}, {
		  "pattern": "employees/{employeeId}/resume:?query:",
		  "name": "employeeResume",
		  "target": ["masterWalkthrough","employeeResume"]
		}
	  ],
	  "targets": {
        "notFound": {
            "viewName": "NotFound",
            "controlAggregation": "detailPages",
            "transition": "show"
        },
        "master": {
            "viewName": "Master",
            "controlAggregation": "masterPages",
            "viewLevel": "1"
        },
        "masterWalkthrough": {
            "viewName": "walkthrough/Master",
            "controlAggregation": "masterPages",
            "viewLevel": "2"
        },
        "home": {
            "viewName": "home/Home",
            "controlAggregation": "detailPages",
            "viewLevel": "1",
            "transition": "flip"
        },
        "todos": {
            "viewName": "todos/Tasks",
            "controlAggregation": "detailPages",
            "viewLevel": "1",
            "transition": "flip"
        },
		"overview": {
		  "viewName": "walkthrough/Overview",
          "controlAggregation": "detailPages",
          "viewLevel": "1",
          "transition": "flip"
		},
		"detail": {
		  "viewName": "walkthrough/Detail",
          "controlAggregation": "detailPages",
          "viewLevel": "1",
          "transition": "flip"
		},
		"employees": {
			"viewPath": "webapp.view.walkthrough",
			"viewName": "EmployeeList",
        	"controlAggregation": "detailPages",
			"viewLevel" : 2
		},
		"employee": {
			"viewName": "walkthrough.Employee",
        	"controlAggregation": "detailPages",
			"viewLevel" : 3
		},
		"employeeResume": {
			"viewName": "walkthrough.Resume",
        	"controlAggregation": "detailPages",
			"viewLevel" : 4,
			"transition": "flip"
		},
		"resumeTabHobbies": {
			"parent": "employeeResume",
			"viewPath": "webapp.view.walkthrough",
			"viewName": "ResumeHobbies",
			"viewId": "thisIsMyCustomIdToBeUsedForResumeHobbies",
			"controlId": "hobbiesTab",
			"controlAggregation": "content"
		},
		"resumeTabNotes": {
			"parent": "employeeResume",
			"viewPath": "webapp.view.walkthrough",
			"viewName": "ResumeNotes",
			"controlId": "notesTab",
			"controlAggregation": "content"
		}
	  }
	}
  }
}